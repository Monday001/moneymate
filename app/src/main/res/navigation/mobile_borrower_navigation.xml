<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_borrower_navigation"
    app:startDestination="@+id/borrower_navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.moneymate.BorrowerHomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_borrower_home" />

    <fragment
        android:id="@+id/navigation_p2p"
        android:name="com.example.moneymate.p2pFragment"
        android:label="Loans"
        tools:layout="@layout/fragment_p2p" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.moneymate.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.moneymate.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
