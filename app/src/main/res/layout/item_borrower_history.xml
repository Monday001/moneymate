<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- Content with padding -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Circle View -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_border"
            android:layout_marginEnd="12dp" />

        <!-- Name and Amount -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/borrower_history_companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company 1"
                android:fontFamily="@font/poppins_medium"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/borrower_history_loanAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10,000"
                android:fontFamily="@font/poppins_bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Button WITHOUT padding -->
    <Button
        android:id="@+id/borrower_view_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:text="VIEW"
        android:background="@drawable/view_button_background"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:minHeight="0dp"
        android:minWidth="0dp" />
</LinearLayout>
