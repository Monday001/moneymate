<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/card_background"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginBottom="8dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- Content with padding -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="18dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Circle View -->
        <View
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/circle_border"
            android:layout_marginEnd="12dp" />

        <!-- Name and Amount -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/borrower_history_companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Company"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/borrower_history_loanAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10,000"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Button WITHOUT padding -->
    <Button
        android:id="@+id/borrower_view_button"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:text="VIEW"
        android:background="@drawable/view_button_background"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:minHeight="0dp"
        android:minWidth="0dp" />
</LinearLayout>
