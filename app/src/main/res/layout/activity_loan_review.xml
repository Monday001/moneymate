<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F3F3"
    android:padding="16dp">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/borrowerFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="48dp" />

            <TextView
                android:id="@+id/loanAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kshs. 10,000"
                android:textSize="18sp"
                android:textColor="#0047AB"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/loanPurpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School fees"
                android:textSize="18sp"
                android:textColor="#0047AB"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/borrowerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:text="0123456789"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:text="johndoe@example.com"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Front"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvIdFront"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:text="ID Front.jpg"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Back"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvIdBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:text="ID Back.jpg"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Buttons at Bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <Button
            android:id="@+id/btnApprove"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="APPROVE"
            android:backgroundTint="#FF9800"
            android:textColor="#FFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnDeny"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="DENY"
            android:backgroundTint="#FF9800"
            android:textColor="#FFF"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
