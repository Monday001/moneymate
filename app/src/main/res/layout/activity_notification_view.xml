<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:padding="16dp">

    <TextView
        android:id="@+id/notification_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/detail_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kshs. 40,000"
        android:textSize="24sp"
        android:textColor="#4A00FF"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/notification_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/detail_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pending Approval"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/detail_amount"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Message not Available just yet"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:visibility="visible"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/detail_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:padding="16dp"
        android:backgroundTint="#F7931E"
        android:text="CLOSE"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
