<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroundColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="30dp"
            >

            <!-- Header -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="60dp"
                >
                <!-- Back Button -->

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/back_button_background"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="@string/back"/>

                <!-- loan application text -->

                <TextView
                    android:id="@+id/loanApplicationTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Loan application"
                    android:textColor="@color/black"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fill the form below with the correct details"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"
                />

            <!-- Full Name -->
            <EditText
                android:id="@+id/fullNameEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:hint="Full name"
                android:inputType="text"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/edittext_border"
                android:textColor="#000"
                android:textColorHint="#666" />

            <!-- Email Address -->
            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:hint="Email address"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/edittext_border"
                android:textColor="#000"
                android:textColorHint="#666" />

            <!-- Amount -->
            <EditText
                android:id="@+id/amountEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:hint="Loan Amount"
                android:inputType="number"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/edittext_border"
                android:textColor="#000"
                android:textColorHint="#666" />

            <!-- ID Front -->
            <EditText
                android:id="@+id/idFrontEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:hint="ID Front"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/edittext_border"
                android:textColor="#000"
                android:textColorHint="#666"
                android:focusable="false"
                android:clickable="true"
                android:drawableEnd="@drawable/upload"
                />

            <!-- ID Back -->
            <EditText
                android:id="@+id/idBackEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:hint="ID Back"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/edittext_border"
                android:textColor="#000"
                android:textColorHint="#666"
                android:focusable="false"
                android:clickable="true"
                android:drawableEnd="@drawable/upload" />

            <!-- Purpose -->
            <EditText
                android:id="@+id/purposeEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:hint="Loan purpose"
                android:inputType="text"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/edittext_border"
                android:textColor="#000"
                android:textColorHint="#666" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/submitButton"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/primaryColor"
                android:gravity="center"
                android:padding="12dp"
                android:text="Submit"
                android:textColor="#000"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_regular"
                app:cornerRadius="15dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
