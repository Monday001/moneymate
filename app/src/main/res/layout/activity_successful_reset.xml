<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".SuccessfulResetActivity">

    <!-- Check Circle Icon -->
    <ImageView
        android:id="@+id/checkIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/check_circle"
        android:scaleType="centerInside" />


    <!-- Title -->

    <!-- Message -->
    <TextView
        android:id="@+id/successfulResetTitle"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkIcon"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="131dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="131dp"
        android:gravity="center"
        android:text="Successful"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/successMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations your password has been changed. Click continue to login"
        android:textSize="16sp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textColor="#000000"
        android:layout_below="@id/successfulResetTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <!-- Continue Button -->
    <Button
        android:id="@+id/verifyCodeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/successMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#F29B2B"
        android:gravity="center"
        android:paddingStart="68dp"
        android:paddingEnd="68dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Continue"
        android:textColor="#000000"
        android:textStyle="bold" />
</RelativeLayout>
