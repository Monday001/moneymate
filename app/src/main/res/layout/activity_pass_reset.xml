<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor"
    tools:context=".PassResetActivity">

    <!-- Back Button -->

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/back_button_background"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="back"/>

    <TextView
        android:id="@+id/forgotPasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Forgot password"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_below="@+id/backButton"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/forgotPasswordSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="24dp"
        android:text="Please enter your phone number and email to reset the password."
        android:textColor="#000000"
        android:textSize="15sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_below="@id/forgotPasswordTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:id="@+id/phoneInput"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:padding="12dp"
        android:hint="Enter your phone number"
        android:inputType="phone"
        android:textSize="15sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:background="@drawable/edittext_border"
        android:layout_below="@id/forgotPasswordSubtitle"
        android:layout_alignParentStart="true"/>


    <!-- Email Input -->

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:padding="12dp"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:textSize="15sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:background="@drawable/edittext_border"
        android:layout_below="@id/phoneInput"
        android:layout_alignParentStart="true"/>

    <!-- Reset Password Button -->

    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="97dp"
        android:gravity="center"
        android:padding="12dp"
        app:cornerRadius="15dp"
        android:text="Reset Password"
        android:fontFamily="@font/poppins_regular"
        android:backgroundTint="@color/primaryColor"
        android:textSize="15sp"
        android:textColor="#000"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/emailInput"/>

</RelativeLayout>
