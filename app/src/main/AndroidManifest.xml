<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- INTERNET permission goes here -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Moneymate"
        tools:targetApi="31">
        <activity
            android:name=".LenderHomeActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterLenderActivity"
            android:exported="false" />
        <activity
            android:name=".AuthenticateLenderActivity"
            android:exported="false" />
        <activity
            android:name=".SelectionActivity"
            android:exported="false" />
        <activity
            android:name=".PassResetActivity"
            android:exported="false" /> <!-- MainActivity: Entry point -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- SignupActivity: Declare separately -->
        <activity android:name=".SignupActivity" />
        <activity
            android:name=".SigninActivity"
            android:exported="false" />
    </application>

</manifest>